<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bbackground"
    android:padding="24dp"
    android:id="@+id/mainLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/white"
        app:navigationContentDescription="@string/nav_drawer_open" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/header"
        android:layout_marginTop="69dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_arrow"
            android:layout_gravity="start"
            android:layout_marginTop="13dp" />

        <!-- Back Button -->

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/metrophobic"
            android:text="Shop Markets"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/shop_icon"
        android:layout_width="155dp"
        android:layout_height="127dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_menu_shop" />

    <TextView
        android:id="@+id/shop_coming_soon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Feature Coming Soon"
        android:textSize="22sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_below="@id/shop_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/shop_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We're working hard to bring this to you soon!"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_below="@id/shop_coming_soon_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />
</RelativeLayout>
