<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- MAIN SCREEN -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_bbackground"
        android:fitsSystemWindows="true">

        <!-- APP BAR -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:title="@string/app_name"
                app:titleTextColor="@android:color/white"
                app:navigationContentDescription="@string/nav_drawer_open"/>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- SCROLLABLE CONTENT -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          android:layout_marginTop="80dp"
            android:padding="16dp"
            android:clipToPadding="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- NAV BUTTONS -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fitnessfirst"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="22dp"
                    android:text="@string/fitness_workout"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/notif"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/recommendedfirst"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="22dp"
                    android:text="@string/nutrition_plan"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_doctorcontacting"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/medicationalarmfirst"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="22dp"
                    android:text="@string/medication_alarm"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_medication"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/choosetrainer"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="22dp"
                    android:text="@string/choose_trainer"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_trophy"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doctorcontactfirst"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="@string/doctor_contact"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_doctorcontacting"
                    app:iconGravity="textStart" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/detectfirst"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="@string/detect"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_doctorcontacting"
                    app:iconGravity="textStart" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dietmedical"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="@string/dietmedical"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    app:iconGravity="textStart" />

                <!-- CURRENT PLAN CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="8dp"
                    android:elevation="4dp"
                    android:padding="16dp"/>

                <!-- STATS ROW -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <!-- Exercises -->

                    <!-- Time -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:elevation="2dp"
                        android:padding="12dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- BOTTOM NAVIGATION -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="?attr/colorPrimary"
            app:menu="@menu/bottom_navigation_menu"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- NAVIGATION DRAWER -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_items"/>
</androidx.drawerlayout.widget.DrawerLayout>
