<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Edit Exercise Name -->
    <EditText
        android:id="@+id/editExerciseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Exercise Name" />

    <!-- Edit Exercise Description -->
    <EditText
        android:id="@+id/editExerciseDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description" />

    <!-- Edit Exercise Duration -->
    <EditText
        android:id="@+id/editExerciseDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Duration" />

    <!-- Exercise Type Spinner -->
    <Spinner
        android:id="@+id/editExerciseType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Exercise Goal Spinner -->
    <Spinner
        android:id="@+id/editExerciseGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Exercise Experience Spinner -->
    <Spinner
        android:id="@+id/editExerciseExperience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Icon ID (EditText for now) -->
    <EditText
        android:id="@+id/editExerciseIconId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Icon ID" />

</LinearLayout>
