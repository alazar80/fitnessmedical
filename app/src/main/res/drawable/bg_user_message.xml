<!-- res/drawable/bg_user_message.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#4CAF50" /> <!-- Light green color for user message background -->

    <corners android:radius="16dp" /> <!-- Rounded corners -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <stroke
        android:width="1dp"
        android:color="#388E3C" /> <!-- Darker green border for contrast -->
